/* pages/subject/subject.wxss */
.week{
  justify-content: center;
  display: flex;
  align-items: center;
  background-color: #eef58e;
  color: #bebc44;
  height: 50rpx;
  font-size: 26rpx;
  text-shadow: #fffd8c86 2rpx 2rpx 1rpx;
}
.top {
  display: flex;
  flex-direction: row;
  height: 50rpx;
  padding-left: 45rpx;
  padding-right: 10rpx;
  background-color: #d2e6b3;
  color: #7cba23;
  justify-content: space-around;
  text-shadow: #cfff8c86 2rpx 2rpx 1rpx;
}

.top-text {
  font-size: 26rpx;
  justify-content: center;
  display: flex;
  align-items: center;
}

/* .timetable-inner {
  height: 100%;
  width: 900rpx;
  display: flex;
} */

.time-line {
  background-color: #d2e6b3;
  color: #7cba23;
  display: flex;
  flex-direction: column;
  float: left;
  height: 100%;
}

.left-time {
  width: 36rpx;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  height: 112.5rpx;
}

.timetable-item{
  float: left;
  overflow: hidden;
  position: absolute;
}

.flex-item {
  width: 95rpx;
  /* height: 100rpx; */
}

.kcb-item {
  justify-content: center;
  display: flex;
  align-items: center;
  border-radius: 15rpx;
}

.smalltext {
  font-size: 25rpx;
  color: #fff;
  padding-left: 2rpx;
  text-shadow: #4e4e4e86 1.5rpx 1.5rpx 1rpx;
  /* text-align: center; */
}

.scroll {
  height: 100%;
  z-index: 101;
  /* position: fixed; */
}

.box1 .dateBox {
  width: 100%;
  height: 50px;
  line-height: 50px;
  text-align: center;
  margin-top: 20px;
  font-size: 40rpx;
}

.box1 {
  display: flex;
  flex-wrap: wrap;
  margin: 0 auto;
}

.box1>view {
  height: 30px;
  line-height: 30px;
  text-align: center;
  font-size: 34rpx;
}

.dateOn {
  border-radius: 50%;
  background-color: hotpink;
  color: #fff;
}

.ball {
  box-shadow: 2px 2px 10px #AAA;
  border-radius: 20px;
  position: absolute;
}

.font-color {
  color: #a9a9a9;
}
.end-blank{
  position: absolute;
  height: auto;
}
.time-cell{
  flex-direction: column;
  padding: 2% 0% 0% 0%;
  box-shadow: rgba(219, 219, 219, 0.411) 0px 3px 3px 1px;
}
.time-border{
  width: 100%;
  border-top: 1rpx rgb(235, 235, 235) solid;
  margin-bottom: 2%;
  padding-top: 2%;
}
.time-title{
  font-weight: bold;
  font-size: 42rpx;
  margin-bottom: 1%;
  display: flex;
  width: 100%;
  justify-content: center;
}
.time-status{
  font-weight: bold;
  /* margin-left: 5%; */
}
.time-inner{
  font-size: 30rpx;
}