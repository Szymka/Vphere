<view class="weui-cells__title">签到事项</view>
<view class="weui-cells weui-cells_after-title" wx:for="{{group}}" wx:for-item="items" wx:key="index" wx:if="{{hasuserinfo}}">
  <view class="weui-cell">
    <view class="weui-cell__bd">{{items.group_name}}</view>
    <view class="weui-cell__ft">{{items.start_time}} {{items.end_time}} {{items.location}} </view>
    <view class="weui-cell__ft">{{items.status==0?'未开始':(status==1?'签到成功':'迟到')}}</view>
  </view>
</view>