  <view class="tr bg-w">
  	<view class="th">集体编号</view>
  	<view class="th">集体名称</view>
  	<view class="th ">下载考勤信息</view>
  </view>
  <scroll-view class="table" scroll-y="true">
  	<block wx:for="{{listData}}" wx:key="{{code}}" class="scroll-view-item">
  		<view class="tr bg-g" wx:if="{{index % 2 != 0}}">
  			<view class="td">{{item.code}}</view>
  			<view class="td">{{item.text}}</view>
  			<view class="td">
  				<view catchtap='download' data-type="excel" data-url="">下载</view>
  			</view>
  		</view>
  		<view class="tr" wx:else>
  			<view class="td">{{item.code}}</view>
  			<view class="td">{{item.text}}</view>
  			<view class="td">
  				<view catchtap='download' data-type="excel" data-url="">下载</view>
  			</view>
  		</view>
  	</block>
  </scroll-view>